{
	"$type":"playonweb-game",
	"$schema": "http://localhost/d3js-playground/test/playonweb/schemas/game.json",
	"name":"pairs",
	"version": "1.0.0",
	"title": "Concentration (Pairs) Game",
	"description": "Describe your game here.",
	"authors": [
		{
			"author": "Myrousz",
			"email": "foo@wastebasket.org"
		}
	],
	"previewUri": "preview.html",
	"helpUri": "help.html",
	"viewUri": "view.html",
	"appUri": "game.js",
	"created": "",
	"avatarUri": "avatar.png",	
	"defaultSettings": {
		"_comment": "internal parameters of game, not changeable by user",
		"difficulty": "medium",
		"levelPolicy": "linear"
	},
	"options": {
		"_comment": "Schema of game settings object. Settings may be changed by user. Compatible with Alpaca forms.",
		"schema": {
    	    "type": "object",
	        "properties": {
	            "difficulty": {
	                "type": "string",
	                "enum": ["easy","medium","hard"],
	                "required": true
	            },
	            "level": {
	                "type": "string",
	                "required": true,
	                "enum":["level1","level2"]
	            }
	        }
	    },
	    "options": {
	        "fields": {
	            "difficulty": {
	                "type": "select",
	                "label": "Difficulty"
	            },
	            "level": {
	                "type": "select",
	                "label": "Starting level"
	            }
	        }
	    },
		"default": {
			"difficulty": "medium",
			"level": "level1"
		}
	},
	"logs": [
		{
			"name": "startup",
			"title": "Game startup."
		},
		{
			"name": "finish",
			"title": "Game finish."
		}
	],
	"levelsUri": "levels/metadata.json"
}
